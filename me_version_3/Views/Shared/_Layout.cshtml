@* Shared layout for Razor Pages *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] ?? "me version 3 with .net"</title>

    <!-- Bootstrap CSS (CDN) -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          crossorigin="anonymous" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- NavBar -->
        <div class="container-fluid bg-dark text-light p-2" id="navBar">
            <div class="row justify-content-center align-items-center">
                <div class="col-5 text-center fs-2">Amro Al-Mohisn</div>
                <div class="col text-center"><a href="#aboutMe" class="btn btn-outline-light">About me</a></div>
                <div class="col text-center"><a href="#studing" class="btn btn-outline-light">Studing</a></div>
                <div class="col text-center"><a href="#Skills" class="btn btn-outline-light">Skills</a></div>
                <div class="col-4 text-center"><a href="#Contact" class="btn btn-outline-light">Contact</a></div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - me_version_3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>